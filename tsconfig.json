{
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "inlineSources": false,
        "isolatedModules": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "strict": true
    },
    "include": [
        "lib"
    ],
}